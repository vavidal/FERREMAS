<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" type="image/jpeg" href="/Images/Logo Ferremas.png">
        <title>Inicio de Sesión - Ferremas</title>
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="/node_modules/bootstrap/dist/css/bootstrap.css">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="/node_modules/@fortawesome/fontawesome-free/css/all.min.css">
        <!-- Custom CSS -->
        <link rel="stylesheet" href="/CSS/inicio.css">
        <link rel="stylesheet" href="/CSS/cart.css">
        <link rel="stylesheet" href="/CSS/contacto.css">
        <script src="/Js/agregarCarrito.js" async></script>
    </head>
<body>
    <div class="row">
        <div class="col-10" id="navbar-container"></div>
        <div class="col-2" id="datos"></div>
      </div>

    <% if (error && error.length > 0) { %>
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
      <% } %>

    <div class="container mt-5">
        <div class="row">
            <!-- Columna Izquierda -->
            <div class="col-md-6 mx-auto">
                <h2>Ingreso trabajadores FERREMAS</h2>
                <div class="card">
                    <form method="POST" action="/inicio_sesion">
                        <div class="form-group">
                            <label for="nombre" class="form-label">Usuario</label>
                            <input type="text" class="form-control" id="user" name="user" placeholder="Ingresa tu usuario" minlength="3" required>
                        </div>
                        <div class="form-group">
                            <label for="passw" class="form-label">Contraseña</label>
                            <input class="form-control" id="passw" name="passw" type="password" placeholder="Ingresa tu contraseña" minlength="3" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div id="footer-container"></div>
    
    <script src="/Js/fetchNav.js"></script>
    <script src="/node_modules/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="/node_modules/jquery/dist/jquery.js"></script>
    <script src="/node_modules/@popperjs/core/dist/umd/popper.js"></script>
</body>
</html>