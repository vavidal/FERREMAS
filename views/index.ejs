<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Datos de Cliente</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <div class="container-fluid">
              <a href="/inicio">
                  <img class="logo-img" src="/Images/Logo Ferremas.png" alt="Logo Ferremas" style="width: 100px;">
              </a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNav">
                  <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                      <li class="nav-item">
                          <a class="nav-link active" aria-current="page" href="/pinturas">Pinturas</a>
                      </li>
                      <li class="nav-item">
                          <a class="nav-link" href="/herramienta_electrica">Herramientas Eléctricas</a>
                      </li>
                      <li class="nav-item">
                          <a class="nav-link" href="/materiales">Materiales de Construcción</a>
                      </li>
                  </ul>
                  <form class="d-flex ms-auto" role="search">
                      <input class="form-control me-2" type="search" placeholder="Busca tu producto..." aria-label="Buscar">
                      <button class="btn btn-warning" type="submit">Buscar</button>
                      <!-- Ícono de carrito -->
                      <a href="#" class="btn btn-outline-warning ms-2">
                          <i class="fas fa-shopping-cart"></i>
                      </a>
                  </form>
              </div>
          </div>
      </nav>
    </header>
      <div class="container d-flex text-center col-6 justify-content-center" style="padding-top: 2%; padding-bottom: 2%;">
        <table class="table border border-primary">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">RUT DEL EMPLEADO</th>
            
                <th scope="col">NOMBRE EMPLEADO</th>
                <th scope="col">TIPO EMPLEADO</th>
              </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <th scope="row"><%= user.AIDI %></th>
                        <td><%= user.RUTER %></td>
                        <td><%= user.NEIM %></td>
                        <td><%= user.TIPO %></td>
                    </tr>  <!-- Modify this based on your database schema -->
                <% }); %>
            </tbody>
        </table>
    </div> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>

</html>